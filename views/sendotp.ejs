<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
<div class="about_container">
  <div class="container">
    <h1>Register</h1>
    <% if (typeof errorMessage  !== 'undefined') { %>
      <p class="errorMessage"><%= errorMessage %></p>
    <% } %> 

    <form action="/sendotp" method="post" class="login-form">
      <div class="form-group small-input">
        <label for="name">Name</label>
        <input class="form-control" placeholder="Enter Name" type="text" name="name" id="name" required>
      </div>
      <div class="form-group small-input">
        <label for="email">Email</label>
        <div class="input-group">
          <input class="form-control" placeholder="Enter Email" type="email" name="email" id="email" required>
        </div>
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-lg">Get OTP</button>
      <br><br>Already have an account? <a href="/" class="anchor">Login</a> here
    </form>
  </div>
</div>

<%- include("partials/footer") %>
