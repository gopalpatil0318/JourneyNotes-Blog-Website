

<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
<div class="about_container">
    <div class="container">
      <h1>Login</h1>
      <% if (typeof errorMessage  !== 'undefined') { %>
        <p class="errorMessage"><%= errorMessage %></p>
      <% } %> 
        <form action="/login" method="post" class="login-form">
          
          <div class="form-group small-input">
            <label for="email">Email</label>
            <input class="form-control" placeholder="Enter Email" type="email" name="email" id="email" required>
          </div>
          <div class="form-group small-input">
            <label for="password">Password</label>
            <input class="form-control" placeholder="Enter Password" type="password" name="password" id="password" required>
          </div>
          <br>
          <button type="submit" class="btn btn-success btn-lg">Login</button>
          <!-- <a href="register" class="btn btn-success btn-lg">Register</a> -->
          <!-- <a href="/" class="btn btn-google btn-lg">Login with Google</a> -->
          <br><br>Didn't have account <a href="register" class="anchor">Register </a>here
        </form>
        
    </div>
</div>



<%- include('partials/footer') -%>